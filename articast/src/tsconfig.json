{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // ref: https://github.com/Quramy/jest-prisma
    "types": ["@types/jest", "@quramy/jest-prisma"],
    // ref: https://github.com/Microsoft/tsyringe?tab=readme-ov-file#installation
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "exclude": ["node_modules"],
  // ref: https://github.com/TypeStrong/ts-node?tab=readme-ov-file#native-ecmascript-modules
  "ts-node": {
    "esm": true
  }
}
